
<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/add_user" type="button" class="btn btn-primary align-self-center mb-2">Add New User</a>
  </div>
</div>



<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
     {{#each user}}
    <tr>
    <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
      <td>
        <a href="/view_user/{{this.id}}" class="btn btn-light btn-small"><i class="bi bi-eye">View</i></a>
        <a href="/edit_user/{{this.id}}" class="btn btn-info"><i class="bi bi-pencil">Edit</i></a>
        <a href="/delete/{{this.id}}" class="btn btn-danger"><i class="bi bi-person-x">Delete</i></a>
      </td>
    </tr>
      {{/each}}
  </tbody>
</table>